<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Styles", required: false)
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="Ventas">Sistema Tienda</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">

                <li class="nav-item dropdown active">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Inventario
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        @Html.ActionLink("Productos", "Index", "Productos", null, new { @class = "dropdown-item" })
                        @Html.ActionLink("Ventas", "Index", "Ventas", null, new { @class = "dropdown-item" })
                        @Html.ActionLink("Compras", "Index", "Compras", null, new { @class = "dropdown-item" })
                    </div>
                </li>

                <li class="nav-item dropdown active">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Usuarios
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        @Html.ActionLink("Empleados", "Index", "Empleados", null, new { @class = "dropdown-item" })
                        @Html.ActionLink("Clientes", "Index", "Clientes", null, new { @class = "dropdown-item" })
                        @Html.ActionLink("Proveedores", "Index", "Proveedores", null, new { @class = "dropdown-item" })
                    </div>
                </li>

                <li class="nav-item dropdown active">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Herramientas
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        @Html.ActionLink("Kardex", "Index", "Kardex", null, new { @class = "dropdown-item" })
                        @Html.ActionLink("Cuentas por cobrar", "Index", "CxC", null, new { @class = "dropdown-item" })
                        @Html.ActionLink("Cuentas por pagar", "Index", "CxP", null, new { @class = "dropdown-item" })
                    </div>
                </li>

                <li class="nav-item dropdown active">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Administración
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        @Html.ActionLink("Cargos empleados", "Index", "CargosEmpleados", null, new { @class = "dropdown-item" })
                        @Html.ActionLink("Metodos de pago", "Index", "MetodosPago", null, new { @class = "dropdown-item" })
                        @Html.ActionLink("Categorias de productos", "Index", "CategoriasProductos", null, new { @class = "dropdown-item" })
                    </div>
                </li>
            </ul>
            <div class="ml-auto">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

            @Html.ValidationMessageFor(model => model.fecha_limite, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.abono_inicial, htmlAttributes: new { @class = "control-label col-md-2" })

@model SistemaTienda.Models.tblCxC

@{
    ViewBag.Title = "Create";
}

<h2>Nueva cuenta por cobrar</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>tblCxC</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.id_venta, "id_venta", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("id_venta", null, htmlAttributes: new { @class = "form-control" })

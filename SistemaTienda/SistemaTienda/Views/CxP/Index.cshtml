@model IEnumerable<SistemaTienda.Models.tblCxP>

@{
    ViewBag.Title = "Index";
}

<h2>Listado de cuentas por pagar</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tblCompra.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fecha_limite)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.abonado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.estado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        @{
            string color = "text-info";
            if (item.estado.Equals("Vencido"))
            {
                color = "text-danger";
            }
            else if (item.estado.Equals("Completado"))
            {
                color = "text-success";
            }
        }

        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tblCompra.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fecha_limite)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.abonado)
        </td>
        <td class="@color">
            @Html.DisplayFor(modelItem => item.estado)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Pagos", "Index", "Pagos", new { id = item.Id }, null) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>

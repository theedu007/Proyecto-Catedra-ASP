@model IEnumerable<SistemaTienda.Models.tblVenta>

@{
    ViewBag.Title = "Index";
}

<h2>Listado de ventas</h2>

<div class="row">
    <div class="col">
        <div class="float-left">
            <p>
                @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
            </p>
        </div>
        <div class="float-right">
            <p>
                @Html.ActionLink("Devoluciones", "index", "DevolucionesVentas", null, new { @class = "btn btn-info" })
            </p>
        </div>
    </div>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tblCliente.nombre_compañia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tblEmpleado.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tblMetodoPago.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tblProducto.nombre_producto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cantidad_venta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.precio_final)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tblCliente.nombre_compañia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tblEmpleado.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tblMetodoPago.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tblProducto.nombre_producto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cantidad_venta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.precio_final)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
